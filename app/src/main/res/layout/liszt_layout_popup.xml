<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/button2_style"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView46"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/liszt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView47"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="FRANZ LISZT"
                android:textAlignment="center"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView48"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/arapey"
                android:text="Nacio el 22 de octubre de 1811 en Raiding, imperio austriaco."
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView49"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/arapey"
                android:paddingLeft="15dp"
                android:text="Compositor, virtuoso pianista, director de orquesta, profesor de musica y arreglista autro-hungaro."
                android:textAlignment="textStart"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/arapey"
                android:paddingLeft="15dp"
                android:text="Se mudo a Paris, donde conocio a sus mas grandes influencias: Hector Berlioz y Niccolo Paganini."
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView51"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/arapey"
                android:paddingLeft="15dp"
                android:text="Compuso grandes obras para orquesta. Destacan las sinfonias de Fausto y Dante, sus mas celebres poemas sinfonicos: Tasso, Los Preludios, Mazeppa y Orfeo."
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView52"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/arapey"
                android:paddingLeft="15dp"
                android:text="Fue uno de los representantes mas destacadaos de la Nueva Escuela Alemana."
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView53"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/arapey"
                android:paddingLeft="15dp"
                android:text="La invencion del poema sinfonico y la ampliacion de los recursos tecnicos de la escritura y la interpretacion del piano, fueron sus contribuciones mas notables."
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView54"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arapey"
                android:text="Muere el 31 de julio de 1886 en Bayreuth, Alemania."
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>