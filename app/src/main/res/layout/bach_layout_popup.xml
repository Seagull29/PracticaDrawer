<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/button2_style"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView28"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/bach" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="JOHANN SEBASTIAN BACH"
                android:textAlignment="center"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/arapey"
                android:text="Nacio el 21 de marzo de 1685 en Eisenach, actual Alemania."
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/arapey"
                android:paddingLeft="15dp"
                android:text="Compositor, musico y profesor aleman del periodo barroco."
                android:textAlignment="textStart"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/arapey"
                android:paddingLeft="15dp"
                android:text="Miembro mas destacado de una de las familias de musicos mas grandes, con mas de 35 compositores."
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/arapey"
                android:paddingLeft="15dp"
                android:text="Domino con maestria instrumentos como el organo, el clavecin, el violin y la viola de gamba."
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/arapey"
                android:paddingLeft="15dp"
                android:text="Los Conciertos de Brandeburgo, la Pasion segun San Mateo, Tocata y Fuga en D menor o las Cantatas sacras 80, 140 y 147, son sus composiciones mas destacadas."
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/arapey"
                android:paddingLeft="15dp"
                android:text="La obra de Bach es considerada la cumbre de la musica barroca, y el es reconocido como el ultimo gran maestro del contrapunto."
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView36"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arapey"
                android:text="Muere el 28 de julio de 1750 en Leipzig."
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>