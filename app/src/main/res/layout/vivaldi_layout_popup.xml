<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/button2_style"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_weight="1"
            android:src="@drawable/vivaldi" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="7dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ANTONIO LUCIO VIVALDI"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arapey"
                android:layout_marginBottom="3dp"
                android:text="Nacio el 4 de marzo de 1678 en Venecia, actual Italia."
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arapey"
                android:paddingLeft="15dp"
                android:layout_marginBottom="3dp"
                android:text="Compositor, violinista y profesor de violin en una institucion dedidaca a la formacion de musical de niñas huerfanas."
                android:textAlignment="textStart"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arapey"
                android:paddingLeft="15dp"
                android:layout_marginBottom="3dp"
                android:textStyle="bold"
                android:text="Ottone in Villa (1713) fue una de sus primeras operas que compuso." />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arapey"
                android:paddingLeft="15dp"
                android:layout_marginBottom="3dp"
                android:textStyle="bold"
                android:text="Sus obras abarcan el genero concertante, musica de camara, vocal y operistica." />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arapey"
                android:paddingLeft="15dp"
                android:layout_marginBottom="3dp"
                android:textStyle="bold"
                android:text="Las cuatro estaciones, cuatro conciertos para violin y orquesta que evocan las distintas estaciones del año, son sus composiciones mas celebres." />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arapey"
                android:paddingLeft="15dp"
                android:layout_marginBottom="3dp"
                android:textStyle="bold"
                android:text="Considerado uno de los mas grandes compositores del periodo barroco." />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arapey"
                android:textStyle="bold"
                android:text="Muere el 28 de julio de 1741 en Viena a los 63 años." />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>